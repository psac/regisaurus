= form_for @shooter do |f|
  - if @shooter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shooter.errors.count, "error")} prohibited this shooter from being saved:"
      %ul
        - @shooter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :uspsa_number
    = f.text_field :uspsa_number
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :age
    = f.text_field :age
  .field
    = f.label :waiver
    = f.date_select :waiver
  .field
    = f.label :club_board
    = f.text_field :club_board
  - unless @shooter.club_board.present?
    .field
      - if @shooter.current_member?
        = f.label :remove_membership, class: 'checkbox' do
          = f.check_box :remove_membership
          Remove Membership
      - else
        = f.label :add_membership, class: 'checkbox' do
          = f.check_box :add_membership
          Add Membership

  .actions
    = f.submit 'Save'
