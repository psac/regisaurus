= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .control
    = f.label :title
    = f.text_field :title
  .control
    = f.label :club
    = f.select :club, ['PSAC', 'AGC']
  .control
    = f.label :created_at, 'Match Date'
    = f.date_select :created_at

  .actions
    = f.submit
